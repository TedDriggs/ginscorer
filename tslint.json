{
  "rules": {
      "array-type": [true, "array"],
      "arrow-return-shorthand": [true, "multiline"],
      "await-promise": true,
      "ban-comma-operator": true,
      "callable-types": true,
      "class-name": true,
      "comment-format": { "options": ["check-space"] },
      "curly": [true, "ignore-same-line"],
      "interface-over-type-literal": true,
      "jsx-boolean-value": [true, "never"],
      "member-access": [true, "check-accessor", "check-parameter-property"],
      "member-ordering": [
          true,
          {
              "order": [
                  "public-static-field",
                  "protected-static-field",
                  "private-static-field",
                  "public-static-method",
                  "protected-static-method",
                  "private-static-method",
                  "public-instance-field",
                  "protected-instance-field",
                  "private-instance-field",
                  "constructor",
                  "public-instance-method",
                  "protected-instance-method",
                  "private-instance-method"
              ]
          }
      ],
      "new-parens": true,
      "no-angle-bracket-type-assertion": true,
      "no-arguments": true,
      "no-boolean-literal-compare": true,
      "no-conditional-assignment": true,
      "no-console": [true, "debug", "log"],
      "no-construct": true,
      "no-debugger": true,
      "no-duplicate-super": true,
      "no-duplicate-switch-case": true,
      "no-eval": true,
      "no-invalid-template-strings": true,
      "no-relative-imports": true,
      "no-return-await": true,
      "no-shadowed-variable": true,
      "no-sparse-arrays": true,
      "no-string-throw": true,
      "no-switch-case-fall-through": true,
      "no-this-assignment": [true, { "allow-destructuring": true }],
      "no-unnecessary-bind": true,
      "no-unnecessary-type-assertion": true,
      "no-unsafe-finally": true,
      "no-unused-expression": true,
      "no-var-keyword": true,
      "object-literal-shorthand": true,
      "one-variable-per-declaration": { "options": ["ignore-for-loop"] },
      "only-arrow-functions": { "options": ["allow-named-functions"] },
      "ordered-imports": true,
      "prefer-const": [true, { "destructuring": "all" }],
      "prefer-method-signature": true,
      "prefer-object-spread": true,
      "prefer-readonly": true,
      "radix": true,
      "triple-equals": true,
      "use-isnan": true,
      "variable-name": {
          "options": [
              "ban-keywords",
              "check-format",
              "allow-pascal-case",
              "allow-snake-case",
              "allow-leading-underscore"
          ]
      }
  },
  "linterOptions": {
      "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  }
}
